{
	"compilerOptions": {
		"allowJs": false,
		"allowSyntheticDefaultImports": true,
		"declaration": true,
		"esModuleInterop": true,
		"isolatedModules": true,
		"jsx": "react-native",
		"lib": [
			"es2017"
		],
		"moduleResolution": "node",
		"outDir": "./lib",
		"skipLibCheck": true,
		"strict": true,
		"target": "esnext"
	},
	"exclude": [
		"node_modules",
		"**/__tests__/*"
	],
	"include": [
		"src"
	]
}